@model GGsWeb.Models.LoginViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div id="cover-caption">
    <div class="container col-8">
        <div class="row text-white">
            @*<div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form  p-4">*@
                <div class=" mx-auto text-center form  p-4">
                    <h1 class="display-4 py-2 text-truncate">Welcome to GGs</h1>
                    <div class="px-2">
                        <form asp-action="Login" class="justify-content-center">
                            <div class="form-group">
                                @*<label asp-for="email"></label>*@
                                <input asp-for="email" type="email" class="form-control shadow-lg" id="email" aria-describedby="emailHelp" placeholder="Enter Email Address">
                            </div>
                            <div class="form-group">
                                @*<label asp-for="password"></label>*@
                                <input asp-for="password" type="password" class="form-control shadow-lg" id="password" placeholder="Enter Password">
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Sign in" class="btn btn-primary shadow-lg">
                            </div>
                            <span><small>Don't have an account? @Html.ActionLink("Sign up", "Signup", "Home")!</small></span>
                        </form>
                    </div>
                </div>
            </div>
    </div>
</div>
